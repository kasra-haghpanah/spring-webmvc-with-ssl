<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">

    <!-- تعریف متغیرها -->
    <property name="LOG_PATH" value="logs" />
    <property name="LOG_FILE" value="${LOG_PATH}/app-log.json" />

    <!-- تعریف encoder برای فرمت JSON -->
    <appender name="JSON_FILE" class="ch.qos.logback.core.FileAppender">
        <file>${LOG_FILE}</file>
        <append>true</append>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <includeContext>true</includeContext>
            <includeCallerData>true</includeCallerData>
            <customFields>{"app":"spring-webmvc-with-ssl","env":"dev"}</customFields>
        </encoder>
    </appender>

    <!-- کنسول برای دیباگ -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <includeContext>true</includeContext>
            <includeCallerData>true</includeCallerData>
        </encoder>
    </appender>

    <!-- تعریف لاگ برای کلاس‌های خودت -->
    <logger name="com.kasra" level="DEBUG" additivity="false">
        <appender-ref ref="JSON_FILE" />
        <appender-ref ref="CONSOLE" />
    </logger>

    <!-- لاگ برای Hibernate و Spring -->
    <logger name="org.hibernate" level="WARN" />
    <logger name="org.springframework" level="INFO" />

    <!-- روت لاگر -->
    <root level="INFO">
        <appender-ref ref="JSON_FILE" />
        <appender-ref ref="CONSOLE" />
    </root>

</configuration>
